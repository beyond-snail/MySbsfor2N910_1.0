<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_pressed_bg" />
            <stroke android:width="1dp" android:color="@color/btn_border_line"/>
            <corners android:radius="6dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_pressed_bg" />
            <stroke android:width="1dp" android:color="@color/btn_border_line"/>
            <corners android:radius="6dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/font_golden" />
            <stroke android:width="1dp" android:color="@color/btn_border_line"/>
            <corners android:radius="6dp" />
            <padding
                android:left="10dp"
                android:right="10dp" />
        </shape>
    </item>
</selector>
