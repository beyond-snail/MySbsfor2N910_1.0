<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_bar_phone"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--激活页面-->
        <LinearLayout
            android:id="@+id/llActivate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="60dp">
                <TextView
                    android:id="@+id/tvActivate"
                    style="@style/phone_item_text_style"
                    android:text="@string/activate_code"/>
                <EditText
                    android:id="@+id/etActivateCode"
                    style="@style/phone_item_edit_text_style"
                    android:hint="@string/input_activate_code"
                    android:layout_marginLeft="10dp"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:paddingLeft="22dp">
                <TextView
                    android:id="@+id/tvDeviceName"
                    style="@style/phone_item_text_style"
                    android:text="@string/device_name"
                    android:layout_alignBaseline="@+id/etDeviceName"/>
                <EditText
                    android:id="@+id/etDeviceName"
                    style="@style/phone_item_edit_text_style"
                    android:hint="@string/input_device_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tvDeviceName"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvDeviceNameTip"
                    style="@style/phone_item_tip_text_style"
                    android:text="@string/input_device_name_tip"
                    android:layout_below="@+id/etDeviceName"
                    android:layout_alignLeft="@+id/etDeviceName"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvTip"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:textColor="@color/font_golden"
                    android:textSize="@dimen/font_size_12"
                    android:background="@drawable/btn_golden_round_bg"
                    android:text="@string/problem"
                    android:layout_toRightOf="@+id/etDeviceName"
                    android:layout_alignBaseline="@+id/etDeviceName"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="13dp">
                <TextView
                    android:id="@+id/tvDeviceSn"
                    style="@style/phone_item_text_style"
                    android:text="@string/device_sn"
                    android:layout_alignBaseline="@+id/etDeviceSn"/>
                <EditText
                    android:id="@+id/etDeviceSn"
                    style="@style/phone_item_edit_text_style"
                    android:hint="@string/input_device_sn"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tvDeviceSn"
                    android:imeOptions="actionDone"/>
                <TextView
                    android:id="@+id/tvDeviceSnTip"
                    style="@style/phone_item_tip_text_style"
                    android:text="@string/input_device_sn_tip"
                    android:layout_below="@+id/etDeviceSn"
                    android:layout_alignLeft="@+id/etDeviceSn"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnActivate"
                style="@style/phone_btn_style"
                android:text="@string/activate"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
        <!--付款页面-->
        <LinearLayout
            android:id="@+id/llPay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewfinder_mask"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/capture_scan_frame"
                android:layout_width="@dimen/phone_scan_frame_width"
                android:layout_height="@dimen/phone_scan_frame_height"
                android:layout_marginTop="100dp"
                android:src="@drawable/capture_line"
                android:background="@drawable/capture_bg"/>
            <TextView
                android:id="@+id/tvPayAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥ 101.2"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_30"
                android:textStyle="bold"
                android:paddingTop="30dp"/>
            <View
                android:layout_width="215dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="将客户的收款码放入框内\n即可收款"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15"/>
        </LinearLayout>

        <!--退款页面-->
        <LinearLayout
            android:id="@+id/llRefund"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <LinearLayout
                style="@style/phone_item_style">
                <TextView
                    style="@style/phone_item_text_style"
                    android:text="@string/refund_no"/>
                <TextView
                    android:id="@+id/tvRefundNo"
                    style="@style/phone_item_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="201505010050"/>
            </LinearLayout>
            <View style="@style/phone_item_seperator"/>
            <LinearLayout
                style="@style/phone_item_style">
                <TextView
                    style="@style/phone_item_text_style"
                    android:text="@string/refund_time"/>
                <TextView
                    android:id="@+id/tvRefundTime"
                    style="@style/phone_item_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="2015-12-25 14:30:39"/>
            </LinearLayout>
            <View style="@style/phone_item_seperator"/>
            <LinearLayout
                style="@style/phone_item_style">
                <TextView
                    style="@style/phone_item_text_style"
                    android:text="@string/trade_no"/>
                <TextView
                    android:id="@+id/tvTradeNo"
                    style="@style/phone_item_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="201505010050"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/etTradeNo"
                    style="@style/phone_item_edit_text_style"
                    android:hint="@string/input_trade_no"
                    android:layout_marginLeft="10dp"
                    android:imeOptions="actionDone"/>
                <LinearLayout
                    android:id="@+id/llScanCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/capture"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_code"
                        android:textSize="@dimen/font_size_10"
                        android:textColor="@color/font_golden"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/phone_item_seperator"/>
            <LinearLayout
                style="@style/phone_item_style">
                <TextView
                    style="@style/phone_item_text_style"
                    android:text="@string/refund_amount"/>
                <TextView
                    android:id="@+id/tvRefundAmount"
                    style="@style/phone_item_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="201505010050"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/etRefundAmount"
                    style="@style/phone_item_edit_text_style"
                    android:hint="@string/input_refund_amount"
                    android:layout_marginLeft="10dp"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
            <View style="@style/phone_item_seperator"/>
            <Button
                android:id="@+id/btnRefund"
                style="@style/phone_btn_style"
                android:text="@string/btn_ok"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <!--撤单页面-->
        <LinearLayout
            android:id="@+id/llRevoke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <LinearLayout
                style="@style/phone_item_style">
                <TextView
                    style="@style/phone_item_text_style"
                    android:text="@string/revoke_time"/>
                <TextView
                    android:id="@+id/tvRevokeTime"
                    style="@style/phone_item_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="2015-12-25 14:30:39"/>
            </LinearLayout>
            <View style="@style/phone_item_seperator"/>
            <LinearLayout
                style="@style/phone_item_style">
                <TextView
                    style="@style/phone_item_text_style"
                    android:text="@string/trade_no"/>
                <TextView
                    android:id="@+id/tvRevokeTradeNo"
                    style="@style/phone_item_text_style"
                    android:layout_marginLeft="10dp"
                    android:text="201505010050"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/etRevokeTradeNo"
                    style="@style/phone_item_edit_text_style"
                    android:hint="@string/input_trade_no"
                    android:layout_marginLeft="10dp"
                    android:imeOptions="actionDone"/>
                <LinearLayout
                    android:id="@+id/llRevokeScanCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/capture"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scan_code"
                        android:textSize="@dimen/font_size_10"
                        android:textColor="@color/font_golden"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/phone_item_seperator"/>
            <Button
                android:id="@+id/btnRevoke"
                style="@style/phone_btn_style"
                android:text="@string/btn_ok"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <!--预下单圆形进度条页面-->
        <LinearLayout
            android:id="@+id/llPreCreateProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminateDrawable="@drawable/ui_frame_loading" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在生成二维码"
                android:textColor="@color/font_shallow"
                android:textSize="@dimen/font_size_15"/>
        </LinearLayout>

        <!--预下单页面-->
        <LinearLayout
            android:id="@+id/llPreCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivQRCode"
                android:layout_width="@dimen/phone_scan_frame_width"
                android:layout_height="@dimen/phone_scan_frame_height"
                android:src="@drawable/ic_launcher"
                android:background="@drawable/qr_code_border_bg"/>
            <TextView
                android:id="@+id/tvPreCreateAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 101.2"
                android:textColor="@color/title_bar_bg"
                android:textSize="@dimen/font_size_30"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvPreCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请扫描上面的二维码完成收款(35s)"
                android:textColor="@color/title_bar_bg"
                android:textSize="@dimen/font_size_15"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!--进度页面-->
        <LinearLayout
            android:id="@+id/llProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dialog_progress_bg"
            android:gravity="center"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="@dimen/phone_white_round_bg_width"
                android:layout_height="@dimen/phone_white_round_bg_width"
                android:orientation="vertical"
                android:background="@drawable/progress_white_round_bg"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35s"
                    android:textSize="@dimen/font_size_30"
                    android:textColor="@color/font_golden"/>
                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activating"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/title_bar_bg"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
