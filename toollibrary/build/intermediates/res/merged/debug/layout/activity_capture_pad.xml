<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_pad"></include>

    <RelativeLayout
        android:id="@+id/capture_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/capture_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/capture_mask_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/viewfinder_mask" />

        <RelativeLayout
            android:id="@+id/capture_crop_view"
            android:layout_width="@dimen/pad_scan_frame_width"
            android:layout_height="@dimen/pad_scan_frame_height"
            android:layout_below="@id/capture_mask_top"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pad_capture_bg" >

            <ImageView
                android:id="@+id/capture_scan_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/pad_capture_line"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/capture_mask_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/capture_crop_view"
            android:background="@color/viewfinder_mask"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¥ 101.2"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_30"
                android:textStyle="bold"
                android:paddingTop="30dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="215dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/capture_mask_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="将客户的收款码放入框内即可收款"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15"/>

        </LinearLayout>

        <TextView
            android:id="@+id/scan_sn_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="将订单条形码放入框内"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15"
            android:paddingTop="30dp"
            android:layout_below="@id/capture_crop_view"
            android:layout_toRightOf="@+id/capture_mask_left"
            android:layout_toLeftOf="@+id/capture_mask_right"
            android:background="@color/viewfinder_mask"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/capture_mask_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/capture_mask_bottom"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/capture_mask_top"
            android:layout_toLeftOf="@id/capture_crop_view"
            android:background="@color/viewfinder_mask" />

        <ImageView
            android:id="@+id/capture_mask_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/capture_mask_bottom"
            android:layout_alignParentRight="true"
            android:layout_below="@id/capture_mask_top"
            android:layout_toRightOf="@id/capture_crop_view"
            android:background="@color/viewfinder_mask" />

        <!--进度页面-->
        <LinearLayout
            android:id="@+id/llProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dialog_progress_bg"
            android:gravity="center"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="@dimen/pad_white_round_bg_width"
                android:layout_height="@dimen/pad_white_round_bg_width"
                android:orientation="vertical"
                android:background="@drawable/progress_white_round_bg"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35s"
                    android:textSize="@dimen/font_size_42"
                    android:textColor="@color/font_golden"/>
                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activating"
                    android:textSize="@dimen/font_size_19"
                    android:textColor="@color/title_bar_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>