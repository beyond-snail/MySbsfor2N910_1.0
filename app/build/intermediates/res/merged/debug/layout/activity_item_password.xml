<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pswId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_enterPswTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/pay_password_txt"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_etgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_pwd1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_bg_selected"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="" />

        <EditText
            android:id="@+id/et_pwd2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_bg_selected"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="" />

        <EditText
            android:id="@+id/et_pwd3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_bg_selected"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="" />

        <EditText
            android:id="@+id/et_pwd4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_bg_selected"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="" />

        <EditText
            android:id="@+id/et_pwd5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_bg_selected"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="" />

        <EditText
            android:id="@+id/et_pwd6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/input_bg_selected"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="" />
    </LinearLayout>

</LinearLayout>