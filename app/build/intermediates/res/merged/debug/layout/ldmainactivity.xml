<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/id_login"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="签到"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />
    <Button
        android:id="@+id/id_sale"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="消费"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />
    <Button
        android:id="@+id/id_revoke"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="消费撤销"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />
    <Button
        android:id="@+id/id_startService"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="启东服务"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />
    <Button
        android:id="@+id/id_stopService"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="断开服务"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />
    <Button
        android:id="@+id/id_query"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="交易查询"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />
    <Button
        android:id="@+id/id_setParams"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="交易参数设置"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/amount_bg" />

</LinearLayout>