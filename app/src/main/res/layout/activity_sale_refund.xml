<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frenchGrey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/darkcyan"
        android:gravity="center"
        android:text="@string/sale_refund"
        android:textColor="@color/white"
        android:textSize="28.0sp" />

    <LinearLayout
        android:id="@+id/id_ll_MasterId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="请输入主管密码："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/id_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_password_sure"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="@string/operator_login_comfirm"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_rrn_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="请输入原参考号："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/id_input_rrn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="12"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="请输入原交易日期（月月日日）："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/id_input_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="请输入原交易金额："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/id_input_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:maxLength="12"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_refund_sure"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg"
            android:text="@string/operator_login_comfirm"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

