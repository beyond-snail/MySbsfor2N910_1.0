<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frenchGrey"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlelayout"
        layout="@layout/layout_header_with_back" />

    <LinearLayout
        android:id="@+id/id_ll_MasterId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="请输入原主管理员密码："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/id_master_password_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="left"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="请输入新主管理员密码："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/id_master_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="left"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/id_master_password_sure"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_purple_cancel_selector"
            android:text="@string/operator_login_comfirm"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>